<%= form_with model: pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :location %>
  <%= f.text_field :location, class: 'form-control' %>
  <%= f.label :species %>
  <%= f.select :species, Pet::SPECIES, {}, class: 'form-control' %>
  <%= f.label :found_on %>
  <%= f.date_field :found_on, class: 'form-control' %>
  <%= f.submit class: 'btn btn-info mt-2' %>
<% end %>
